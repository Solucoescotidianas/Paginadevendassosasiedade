  <script>
    // Default configuration
    const defaultConfig = {
      main_headline: "Seu cora√ß√£o disparou?",
      main_subheadline: "Um SOS de respira√ß√£o guiada para ajudar o corpo a se acalmar durante crises de ansiedade",
      cta_button_text: "QUERO ME ACALMAR AGORA",
      price_value: "R$ 5,99",
      primary_color: "#818cf8",
      secondary_color: "#c084fc",
      background_color: "#0f0d1b",
      text_color: "#ffffff",
      accent_color: "#a78bfa"
    };

    let config = { ...defaultConfig };
    let isBreathing = false;
    let breathingInterval = null;
    let currentCycle = 0;

    // Breathing exercise function
    function startBreathing() {
      if (isBreathing) {
        stopBreathing();
        return;
      }

      isBreathing = true;
      currentCycle = 0;
      const circle = document.getElementById('breathCircle');
      const text = document.getElementById('breathText');
      const instruction = document.getElementById('breathInstruction');
      const btn = document.getElementById('breathBtn');
      const progress = document.getElementById('breathProgress');

      btn.textContent = '‚èπÔ∏è Parar';

      function breathCycle() {
        if (currentCycle >= 4) {
          stopBreathing();
          text.textContent = 'Completo!';
          instruction.textContent = 'Muito bem! Voc√™ completou o exerc√≠cio üíú';
          return;
        }

        // Update progress
        const dots = progress.querySelectorAll('span');
        dots.forEach((dot, i) => {
          dot.className = i <= currentCycle ? 'w-2 h-2 rounded-full bg-indigo-400' : 'w-2 h-2 rounded-full bg-white/20';
        });

        // Inhale phase
        circle.classList.remove('exhale');
        circle.classList.add('inhale');
        text.textContent = 'Inspire';
        instruction.textContent = 'Inspire lentamente pelo nariz...';

        setTimeout(() => {
          if (!isBreathing) return;
          // Hold phase
          text.textContent = 'Segure';
          instruction.textContent = 'Segure a respira√ß√£o...';

          setTimeout(() => {
            if (!isBreathing) return;
            // Exhale phase
            circle.classList.remove('inhale');
            circle.classList.add('exhale');
            text.textContent = 'Expire';
            instruction.textContent = 'Solte o ar pela boca...';

            setTimeout(() => {
              if (!isBreathing) return;
              currentCycle++;
              breathCycle();
            }, 4000);
          }, 4000);
        }, 4000);
      }

      breathCycle();
    }

    function stopBreathing() {
      isBreathing = false;
      const circle = document.getElementById('breathCircle');
      const text = document.getElementById('breathText');
      const instruction = document.getElementById('breathInstruction');
      const btn = document.getElementById('breathBtn');
      const progress = document.getElementById('breathProgress');

      circle.classList.remove('inhale', 'exhale');
      text.textContent = 'Iniciar';
      instruction.textContent = 'Clique no c√≠rculo para come√ßar';
      btn.textContent = 'üå¨Ô∏è Iniciar Respira√ß√£o';
      
      const dots = progress.querySelectorAll('span');
      dots.forEach(dot => {
        dot.className = 'w-2 h-2 rounded-full bg-white/20';
      });
    }

    // Make circle clickable
    document.getElementById('breathCircle').addEventListener('click', startBreathing);

    // Element SDK initialization
    async function onConfigChange(cfg) {
      config = { ...defaultConfig, ...cfg };
      
      // Update headline
      const headline = document.getElementById('headline');
      if (headline) {
        headline.innerHTML = `<span class="text-white">${config.main_headline || defaultConfig.main_headline}</span><br><span class="gradient-text">Use o SOS para se acalmar em minutos</span>`;
      }

      // Update subheadline
      const subheadline = document.getElementById('subheadline');
      if (subheadline) {
        subheadline.textContent = config.main_subheadline || defaultConfig.main_subheadline;
      }

      // Update CTA buttons
      const mainCta = document.getElementById('mainCtaBtn');
      const fixedCta = document.getElementById('fixedCtaBtn');
      const ctaText = config.cta_button_text || defaultConfig.cta_button_text;
      
      if (mainCta) mainCta.textContent = ctaText;
      if (fixedCta) fixedCta.textContent = ctaText;

      // Update price
      const priceMain = document.getElementById('priceMain');
      const priceSmall = document.getElementById('priceSmall');
      const priceValue = config.price_value || defaultConfig.price_value;
      
      if (priceMain) priceMain.textContent = priceValue;
      if (priceSmall) priceSmall.textContent = `Apenas ${priceValue}`;

      // Apply colors
      document.body.style.backgroundColor = config.background_color || defaultConfig.background_color;
      document.body.style.color = config.text_color || defaultConfig.text_color;
    }

    function mapToCapabilities(cfg) {
      return {
        recolorables: [
          {
            get: () => cfg.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              if (window.elementSdk) window.elementSdk.setConfig({ background_color: value });
            }
          },
          {
            get: () => cfg.primary_color || defaultConfig.primary_color,
            set: (value) => {
              config.primary_color = value;
              if (window.elementSdk) window.elementSdk.setConfig({ primary_color: value });
            }
          },
          {
            get: () => cfg.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              if (window.elementSdk) window.elementSdk.setConfig({ text_color: value });
            }
          },
          {
            get: () => cfg.secondary_color || defaultConfig.secondary_color,
            set: (value) => {
              config.secondary_color = value;
              if (window.elementSdk) window.elementSdk.setConfig({ secondary_color: value });
            }
          },
          {
            get: () => cfg.accent_color || defaultConfig.accent_color,
            set: (value) => {
              config.accent_color = value;
              if (window.elementSdk) window.elementSdk.setConfig({ accent_color: value });
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => cfg.font_family || 'DM Sans',
          set: (value) => {
            config.font_family = value;
            if (window.elementSdk) window.elementSdk.setConfig({ font_family: value });
          }
        },
        fontSizeable: {
          get: () => cfg.font_size || 16,
          set: (value) => {
            config.font_size = value;
            if (window.elementSdk) window.elementSdk.setConfig({ font_size: value });
          }
        }
      };
    }

    function mapToEditPanelValues(cfg) {
      return new Map([
        ["main_headline", cfg.main_headline || defaultConfig.main_headline],
        ["main_subheadline", cfg.main_subheadline || defaultConfig.main_subheadline],
        ["cta_button_text", cfg.cta_button_text || defaultConfig.cta_button_text],
        ["price_value", cfg.price_value || defaultConfig.price_value]
      ]);
    }

    // Initialize SDK
    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }

    // Initial render
    onConfigChange(config);
  </script>
